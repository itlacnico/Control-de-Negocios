{% extends 'TimsaControlFletesBundle::layout.html.twig' %}

{% block title %}
Economicos
{% endblock %}

{% block cabecera %}
Economicos
{% endblock %}

{% block content %}
	<div class="col-lg-4">
		<ul class="nav nav-tabs nav-pills nav-stacked" style="max-width: 300px;" id="myTab">
			<li class="active"> <a href="#economicos" data-toggle="tab">Economicos</a> </li>
			{% for socio in socios %}
				<li><a href="#filtro_socio" data-toggle="tab"> {{socio}} </a></li>
			{% else %}
				<li><a href="">No existen socios registrados</a></li>

			{% endfor %}
		</ul>
	</div>

	<div class="tab-content">
		<div class="tab-pane active col-lg-8" id="economicos">
			{% for economico in economicos %}
			<ul class="list-inline">
				<li class="col-lg-3">
					<div class="col-lg-8">
						<img width="100" height="100" src="{{ asset('images/' ~ economico.imagen ) }}">
						<h5><span class="label label-warning">{{economico.placas}}</span></h5>
					</div>
				</li>
			</ul>

			{% else %}
				<h1>No existen Economicos</h1>
			{% endfor %}
		</div>

		<div class="tab-pane col-lg-8" id="filtro_socio">
			<h1>Filtro</h1>
		</div>
	</div>

		
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script>
		$('#myTab').click(function(event) {
			$('#myTab a').tab('show');
		});

	</script>

{% endblock %}