	<div class="tarifas">
		{% if tarifas %}
			<h2> {{nombreTarifa}}  : {{ nombreAgencia }} </h2>

			<table class="table table-bordered">
				<thead>
					<tr>
						<th rowspan="2">Titulo</th>
						<th colspan="3">Sencillo</th>
						<th colspan="3">Full</th>
					</tr>
					<tr>
						<th>Exportacion</th>
						<th>Importacion</th>
						<th>Reutilizado</th>

						<th>Exportacion</th>
						<th>Importacion</th>
						<th>Reutilizado</th>
					</tr>
				</thead>
				<tbody>

				{% set items = { '1': 'success', '' : 'danger',"0" : 'warning' } %}
				{% for agencia in tarifas %}
				<tr class="{{ items[( agencia.status ~ "")] }}">
					<td> {{agencia.titulo}} </td>
					<td> {{agencia.exportacions}} </td>
					<td> {{agencia.importacions}} </td>
					<td> {{agencia.reutilizados}} </td>
					<td> {{agencia.exportacionf}} </td>
					<td> {{agencia.importacionf}} </td>
					<td> {{agencia.reutilizadof}} </td>
				</tr>
				{% endfor %}
				</tbody>
			</table>
		{% else %}
			<h1> No existen cuotas definidas </h1>
		{% endif %}

		<br>
		{#<button class="btn btn-lg btn-success col-md-6 col-md-offset-3 nuevaTarifa" >Nueva Cuota</button>#}
	</div>