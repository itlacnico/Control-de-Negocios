{% extends 'TimsaControlFletesBundle::layout.html.twig' %}

{% block title %}
	Operadores
{% endblock %}

{% block cabecera %}
Operadores
{% endblock %}

{% block content %}
	<div class="col-lg-4">
		<ul class="nav nav-tabs nav-pills nav-stacked" style="max-width: 300px;" id="myTab">
		  <li class="active"><a href="#mostrar_operadores" data-toggle="tab">Operadores</a></li>
		  <li><a href="#operadores_libres" data-toggle="tab">Operadores Libres</a></li>
		  <li><a href="#operadores_ocupados" data-toggle="tab">Operadores Ocupados</a></li>
		  {#<li><a href="#crear" data-toggle="tab">Crear Operador</a></li>#}
		</ul>

	</div>

	<div class="tab-content">
		<div class="tab-pane active col-lg-8" id="mostrar_operadores">
				{% for operador in operadores %}
				<ul class="list-inline">
					<li class="col-lg-3">
						<div class="col-lg-8">
							<img width="100" height="100" src="{{ asset('images/' ~ operador.imagen ) }}">
							<h5><span class="label label-info">{{operador.nombre}}</span></h5>
						</div>
					</li>
				</ul>

				{% else %}
					<h1>No existen Operadores</h1>
				{% endfor %}
		</div>

		<div class="tab-pane col-lg-8" id="operadores_libres">
			{% for operador in operadores_libres %}
			<ul class="list-inline">
				<li class="col-lg-3">
					<div class="col-lg-8">
						<img width="100" height="100" src="{{ asset('images/' ~ operador.imagen ) }}">
						<h5><span class="label label-info">{{operador.nombre}}</span></h5>
					</div>
				</li>
			</ul>

			{% else %}
				<h1>No existen Operadores Libres</h1>
			{% endfor %}
		</div>

		<div class="tab-pane col-lg-8" id="operadores_ocupados">
			{% for operador in operadores_ocupados %}
			<ul class="list-inline">
				<li class="col-lg-3">
					<div class="col-lg-8">
						<img width="100" height="100" src="{{ asset('images/' ~ operador.imagen ) }}">
						<h5><span class="label label-warning">{{operador.nombre}}</span></h5>
					</div>
				</li>
			</ul>

			{% else %}
				<h1>No existen Operadores Ocupados</h1>
			{% endfor %}
		</div>
